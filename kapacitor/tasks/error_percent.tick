batch
    |query('''
        SELECT count("score")
        FROM "udpdb"."default"."player"
    ''')
        .period(1m)
        .every(20s)
        .groupBy(time(15m))
    |alert()
        // Compare values to running mean and standard deviation
        .info(lambda: sigma("score") > 0)
        .crit(lambda: sigma("score") > 2)
        .id('node \'stream0\' in task \'{{ .TaskName }}\'')
        .message('alert')
        .slack()
        .log('/tmp/logs/alerts.log')
